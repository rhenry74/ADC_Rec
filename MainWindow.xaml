<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ADC_Rec.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ADC_Rec"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ADC_Rec">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="12" Spacing="10">
            <TextBlock Text="Serial Port" FontWeight="Bold" />
            <ComboBox x:Name="PortComboBox" Width="280" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="ConnectButton" Content="Connect" Click="ConnectButton_Click" />
                <Button x:Name="DisconnectButton" Content="Disconnect" Click="DisconnectButton_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6,0,0">
                <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" />
                <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" />
            </StackPanel>

            <TextBlock Text="Display window (ms)" />
            <ComboBox x:Name="DisplayWindowCombo" Width="200" SelectionChanged="DisplayWindowCombo_SelectionChanged">
                <ComboBoxItem Content="100" />
                <ComboBoxItem Content="200" />
                <ComboBoxItem Content="500" />
                <ComboBoxItem Content="1000" IsSelected="True" />
                <ComboBoxItem Content="5000" />
            </ComboBox>

            <TextBlock Text="Plot bits (8-24)" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <NumberBox x:Name="PlotBitsNumberBox" Width="90" Value="16" Minimum="8" Maximum="24" SmallChange="1" SpinButtonPlacementMode="Inline" ValueChanged="PlotBitsNumberBox_ValueChanged" />
                <TextBlock Text="bits" VerticalAlignment="Center" Margin="4,0,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <CheckBox x:Name="FitToDataCheck" Content="Fit to data (autoscale)" IsChecked="True" />
            </StackPanel>

            <TextBlock Text="Status:" FontWeight="Bold" Margin="0,8,0,0" />
            <TextBlock x:Name="StatusTextBlock" Text="Idle" TextWrapping="Wrap" />

            <TextBlock Text="Logs:" FontWeight="Bold" Margin="0,8,0,0" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="DumpButton" Content="Dump Data" Click="DumpButton_Click" />
                <Button x:Name="CopyLogsButton" Content="Copy Logs" Click="CopyLogsButton_Click" />
                <Button x:Name="CopyDiagButton" Content="Copy Diag" Click="CopyDiagButton_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6,0,0">
                <Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click" />
                <CheckBox x:Name="VerboseCheckbox" Content="Verbose logs" IsChecked="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6,0,0">
                <Button x:Name="RecordButton" Content="Start Record" Click="RecordButton_Click" />
                <Button x:Name="ReplayButton" Content="Replay..." Click="ReplayButton_Click" />
            </StackPanel>
            <TextBox x:Name="LogTextBox" Height="220" Width="300" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" />
            <TextBlock x:Name="QueueTextBlock" Text="Queue: 0" Margin="0,6,0,0" />
            <TextBlock x:Name="DroppedTextBlock" Text="Dropped: 0" Margin="0,2,0,0" />
            <TextBlock x:Name="DiagTextBlock" Text="" Margin="0,2,0,0" />
            <TextBlock x:Name="BytesTextBlock" Text="Bytes: ch0=0 ch1=0 ch2=0 ch3=0" Margin="0,2,0,0" FontWeight="SemiBold" />
        </StackPanel>

        <Grid Grid.Column="1" Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="Channels" FontWeight="Bold" Margin="8" />

            <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8">
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Canvas x:Name="WaveCanvas0" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                            <TextBlock x:Name="HoverText0" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                        </Grid>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0" Spacing="6">
                            <TextBlock Text="CH0 Input Bits" FontWeight="SemiBold" />
                            <NumberBox x:Name="InputBits0" Minimum="8" Maximum="24" Value="12" SmallChange="1" SpinButtonPlacementMode="Inline" ValueChanged="InputBits_ValueChanged" />
                            <TextBlock Text="CH0 Gain" FontWeight="SemiBold" />
                            <Slider x:Name="GainSlider0" Minimum="0" Maximum="1000" Value="1" SmallChange="0.1" StepFrequency="0.1" IsThumbToolTipEnabled="True" ValueChanged="GainSlider_ValueChanged" />
                            <TextBlock x:Name="GainText0" Text="1.00x" />
                            <TextBlock Text="CH0 Pan" FontWeight="SemiBold" />
                            <Slider x:Name="PanSlider0" Minimum="-1" Maximum="1" Value="0" ValueChanged="PanSlider_ValueChanged" />
                            <TextBlock x:Name="PanText0" Text="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Canvas x:Name="WaveCanvas1" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                            <TextBlock x:Name="HoverText1" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                        </Grid>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0" Spacing="6">
                            <TextBlock Text="CH1 Input Bits" FontWeight="SemiBold" />
                            <NumberBox x:Name="InputBits1" Minimum="8" Maximum="24" Value="12" SmallChange="1" SpinButtonPlacementMode="Inline" ValueChanged="InputBits_ValueChanged" />
                            <TextBlock Text="CH1 Gain" FontWeight="SemiBold" />
                            <Slider x:Name="GainSlider1" Minimum="0" Maximum="1000" Value="1" SmallChange="0.1" StepFrequency="0.1" IsThumbToolTipEnabled="True" ValueChanged="GainSlider_ValueChanged" />
                            <TextBlock x:Name="GainText1" Text="1.00x" />
                            <TextBlock Text="CH1 Pan" FontWeight="SemiBold" />
                            <Slider x:Name="PanSlider1" Minimum="-1" Maximum="1" Value="0" ValueChanged="PanSlider_ValueChanged" />
                            <TextBlock x:Name="PanText1" Text="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Canvas x:Name="WaveCanvas2" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                            <TextBlock x:Name="HoverText2" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                        </Grid>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0" Spacing="6">
                            <TextBlock Text="CH2 Input Bits" FontWeight="SemiBold" />
                            <NumberBox x:Name="InputBits2" Minimum="8" Maximum="24" Value="12" SmallChange="1" SpinButtonPlacementMode="Inline" ValueChanged="InputBits_ValueChanged" />
                            <TextBlock Text="CH2 Gain" FontWeight="SemiBold" />
                            <Slider x:Name="GainSlider2" Minimum="0" Maximum="1000" Value="1" SmallChange="0.1" StepFrequency="0.1" IsThumbToolTipEnabled="True" ValueChanged="GainSlider_ValueChanged" />
                            <TextBlock x:Name="GainText2" Text="1.00x" />
                            <TextBlock Text="CH2 Pan" FontWeight="SemiBold" />
                            <Slider x:Name="PanSlider2" Minimum="-1" Maximum="1" Value="0" ValueChanged="PanSlider_ValueChanged" />
                            <TextBlock x:Name="PanText2" Text="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Canvas x:Name="WaveCanvas3" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                            <TextBlock x:Name="HoverText3" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                        </Grid>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0" Spacing="6">
                            <TextBlock Text="CH3 Input Bits" FontWeight="SemiBold" />
                            <NumberBox x:Name="InputBits3" Minimum="8" Maximum="24" Value="12" SmallChange="1" SpinButtonPlacementMode="Inline" ValueChanged="InputBits_ValueChanged" />
                            <TextBlock Text="CH3 Gain" FontWeight="SemiBold" />
                            <Slider x:Name="GainSlider3" Minimum="0" Maximum="1000" Value="1" SmallChange="0.1" StepFrequency="0.1" IsThumbToolTipEnabled="True" ValueChanged="GainSlider_ValueChanged" />
                            <TextBlock x:Name="GainText3" Text="1.00x" />
                            <TextBlock Text="CH3 Pan" FontWeight="SemiBold" />
                            <Slider x:Name="PanSlider3" Minimum="-1" Maximum="1" Value="0" ValueChanged="PanSlider_ValueChanged" />
                            <TextBlock x:Name="PanText3" Text="Center" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="1" Padding="8" CornerRadius="4">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <StackPanel>
                            <TextBlock Text="Mix L" FontWeight="SemiBold" HorizontalAlignment="Center" />
                            <StackPanel x:Name="MeterLeftPanel" Orientation="Vertical" Spacing="2" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Mix R" FontWeight="SemiBold" HorizontalAlignment="Center" />
                            <StackPanel x:Name="MeterRightPanel" Orientation="Vertical" Spacing="2" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

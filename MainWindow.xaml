<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ADC_Rec.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ADC_Rec"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ADC_Rec">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="12" Spacing="10">
            <TextBlock Text="Serial Port" FontWeight="Bold" />
            <ComboBox x:Name="PortComboBox" Width="280" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="ConnectButton" Content="Connect" Click="ConnectButton_Click" />
                <Button x:Name="DisconnectButton" Content="Disconnect" Click="DisconnectButton_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6,0,0">
                <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" />
                <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" />
            </StackPanel>

            <TextBlock Text="Display window (ms)" />
            <ComboBox x:Name="DisplayWindowCombo" Width="200" SelectionChanged="DisplayWindowCombo_SelectionChanged">
                <ComboBoxItem Content="100" />
                <ComboBoxItem Content="200" />
                <ComboBoxItem Content="500" />
                <ComboBoxItem Content="1000" IsSelected="True" />
                <ComboBoxItem Content="5000" />
            </ComboBox>

            <TextBlock Text="Plot bits (8-24)" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <NumberBox x:Name="PlotBitsNumberBox" Width="90" Value="16" Minimum="8" Maximum="24" SmallChange="1" SpinButtonPlacementMode="Inline" ValueChanged="PlotBitsNumberBox_ValueChanged" />
                <TextBlock Text="bits" VerticalAlignment="Center" Margin="4,0,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <CheckBox x:Name="FitToDataCheck" Content="Fit to data (autoscale)" IsChecked="True" />
            </StackPanel>

            <TextBlock Text="Status:" FontWeight="Bold" Margin="0,8,0,0" />
            <TextBlock x:Name="StatusTextBlock" Text="Idle" TextWrapping="Wrap" />

            <TextBlock Text="Logs:" FontWeight="Bold" Margin="0,8,0,0" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="DumpButton" Content="Dump Data" Click="DumpButton_Click" />
                <Button x:Name="CopyLogsButton" Content="Copy Logs" Click="CopyLogsButton_Click" />
                <Button x:Name="CopyDiagButton" Content="Copy Diag" Click="CopyDiagButton_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6,0,0">
                <Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click" />
                <CheckBox x:Name="VerboseCheckbox" Content="Verbose logs" IsChecked="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6,0,0">
                <Button x:Name="RecordButton" Content="Start Record" Click="RecordButton_Click" />
                <Button x:Name="ReplayButton" Content="Replay..." Click="ReplayButton_Click" />
            </StackPanel>
            <TextBox x:Name="LogTextBox" Height="220" Width="300" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" />
            <TextBlock x:Name="QueueTextBlock" Text="Queue: 0" Margin="0,6,0,0" />
            <TextBlock x:Name="DroppedTextBlock" Text="Dropped: 0" Margin="0,2,0,0" />
            <TextBlock x:Name="DiagTextBlock" Text="" Margin="0,2,0,0" />
            <TextBlock x:Name="BytesTextBlock" Text="Bytes: ch0=0 ch1=0 ch2=0 ch3=0" Margin="0,2,0,0" FontWeight="SemiBold" />
        </StackPanel>

        <Grid Grid.Column="1" Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="Channels" FontWeight="Bold" Margin="8" />

            <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="8">
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Canvas x:Name="WaveCanvas0" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                        <TextBlock x:Name="HoverText0" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                    </Grid>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Canvas x:Name="WaveCanvas1" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                        <TextBlock x:Name="HoverText1" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                    </Grid>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Canvas x:Name="WaveCanvas2" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                        <TextBlock x:Name="HoverText2" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                    </Grid>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="4" CornerRadius="4">
                    <Grid>
                        <Canvas x:Name="WaveCanvas3" Height="140" Background="Black" PointerMoved="WaveCanvas_PointerMoved" PointerEntered="WaveCanvas_PointerEnter" PointerExited="WaveCanvas_PointerExit" />
                        <TextBlock x:Name="HoverText3" Foreground="Yellow" Margin="6" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed" />
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
